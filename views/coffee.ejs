<!DOCTYPE html>
<html>
<head>
    <title>Coffee List</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
  <div class="container text-center">
    <h1>Coffee List</h1>

  <a href="/addcoffee" style="padding: 1rem;" class="btn btn-primary" tabindex="-1" role="button" aria-disabled="true">Add Coffe</a>

    <div class="row">
        <% coffees.forEach((coffee, index) => { %>
            <div class="col-lg-4 col-md-4 col-sm-4">
                <div class="card mb-4" style="width: 18rem; margin-top: 3rem;">
                    <img src="<%= coffee.imageurl %>" class="card-img-top" alt="..." width="100" height="150">
                    <div class="card-body">
                      <h5 class="card-title"><%= coffee.name %></h5>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><h5>Price: </h5>R <%= coffee.price %></li>
                    </ul>
                    <div class="card-body">

                    <form method="POST" action="/view/<%= coffee.id %>">
                      <button type="submit" class="btn btn-warning" >View</button>
                  </form>

                  <hr>
                  <form method="DELETE" action="/delete/<%= coffee.id %>">
                    <button type="submit" class="btn btn-danger">Delete</button>
                  </form>

                    </div>
                </div>
            </div>
            <% if ((index + 1) % 3 === 0) { %>
                </div>
                <div class="row">
            <% } %>
        <% }); %>
    </div>
</div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>
</html>
